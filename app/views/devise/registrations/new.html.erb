<div class="row">
  <div class="col-md-4 col-md-offset-4 text-center">
<h2>Inscription</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
  <%= render 'shared/devise_errors' %>

  <div class="form-group">
    <br />
    <%= f.email_field :email, autofocus: true, class: "form-control", placeholder: "Adresse e-mail" %>
  </div>
  <div class="form-group">
    <br />
    <%= f.text_field :fullname, autofocus: true, class: "form-control", placeholder: "Nom complet ( PrÃ©nom + Nom)" %>
  </div>
  <div class="form-group">
    <% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />
    <%= f.password_field :password, autocomplete: "off", class: "form-control", placeholder: "Mdp"  %>
  </div>

  <div class="form-group">
    <br />
    <%= f.password_field :password_confirmation, autocomplete: "off", class: "form-control", placeholder: "Confirmer mdp" %>
  </div>

  <div class="actions">
    <%= f.submit "Sign up" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
    </div>
</div>